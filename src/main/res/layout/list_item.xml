<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetholder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/linearbackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_divider_height"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/listitemtextview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="@dimen/list_item_textview_padding_top"
        android:paddingBottom="@dimen/list_item_textview_padding_bottom"
        android:textColor="@color/black"
        android:textSize="@dimen/list_item_textview_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/inputlistitemtextview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_edit_text_one_height"
            android:layout_margin="@dimen/list_item_edit_text_one_margin"
            android:layout_marginLeft="@dimen/list_item_edit_text_one_margin_left"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="@dimen/list_item_edit_text_one_padding_left"
            android:visibility="gone" />

        <EditText
            android:id="@+id/inputlistitemtextviewtwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_edit_text_two_height"
            android:layout_margin="@dimen/list_item_edit_text_two_margin"
            android:layout_marginLeft="@dimen/list_item_edit_text_two_margin_left"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="@dimen/list_item_edit_text_two_padding_left"
            android:visibility="gone" />
        <TextView
            android:id="@+id/outputlistitemtextviewtwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_text_view_height"
            android:layout_margin="@dimen/list_item_text_view_margin"
            android:layout_marginLeft="@dimen/list_item_text_view_margin_left"
            android:textSize="@dimen/list_item_text_view_text_size"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="@dimen/list_item_text_view_padding_left"
            android:paddingTop="@dimen/list_item_text_view_padding_top"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>